// DefiniciÃ³n de paleta de colores
color_naranja = #F07C01
color_verde = #00963F
color_gris = #C1BEBE

*
	margin 0
	padding 0
	font 16px verdana, sans-serif

body, header, div, nav, footer
	display block	

body
	// background #E0E6E9
	text-align center
	
header
	width 100%
	text-align center
	background color_verde
	display flex
	-webkit-justify-content space-around
	& h1
		background color_naranja
		border 3px solid black
		border-radius 10em
		font-weight bold
		margin 1em 2em
		padding 1em 1em
		text-transform uppercase
		box-shadow 10px 5px 10px #647044
	& #img_html, #img_css3, #img_js
		margin 1em 0
		border-radius 50%
		border 3px solid black
		box-shadow 10px 5px 10px #647044
		
		
section
	// background color_gris
	& p
		display none
	
footer
	background color_naranja

#menu
	background #CCC
	// background #999
	margin 0
	padding 1em 2em
	& li
		display -webkit-inline-box
		border-right 2px solid black
		& a
			// background yellow
			padding 1em 1em
			text-decoration none
			list-style none
			text-transform capitalize
	& li:last-child
		border-right none
			
#canvasInicio
	background #F5F1CC
	display -webkit-inline-box
	width 300px

// Mobile (portrait)
@media only screen and (min-width: 480px) and (max-width: 767px)
	section
		background #FFF
	#canvasInicio
		width 500px

// Mobile (landscape)
@media only screen and (min-width: 768px)
	#canvasInicio
		width 800px



